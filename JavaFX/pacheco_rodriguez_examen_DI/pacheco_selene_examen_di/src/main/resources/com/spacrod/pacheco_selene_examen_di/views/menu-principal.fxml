<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spacrod.pacheco_selene_examen_di.controllers.MenuPrincipalController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox prefHeight="50.0" prefWidth="1240.0">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="true" text="_Iniciar">
                     <items>
                        <MenuItem mnemonicParsing="true" onAction="#onClickMenuIniciar" text="_Login" />
                     </items>
                </Menu>
                <Menu mnemonicParsing="true" text="_Citas">
                     <items>
                        <MenuItem mnemonicParsing="true" onAction="#onClickMenuCitas" text="_Citas" />
                     </items>
                </Menu>
                <Menu mnemonicParsing="true" text="_Salir">
                     <items>
                        <MenuItem mnemonicParsing="true" onAction="#onClickMenuSalir" text="_Salir" />
                     </items>
                </Menu>
              </menus>
            </MenuBar>
         </children></HBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="1240.0">
         <children>
            <Label text="HOSPITAL VIRGEN DEL ROCÍO" textFill="#002357">
               <font>
                  <Font name="Comic Sans MS Bold" size="36.0" />
               </font></Label>
         </children></HBox>
      <HBox alignment="CENTER" prefHeight="520.0" prefWidth="1240.0">
         <children>
            <ImageView fitHeight="490.0" fitWidth="1158.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/portada.jpg" />
               </image></ImageView>
         </children></HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="1240.0">
         <children>
            <Button mnemonicParsing="true" onAction="#onClickMenuIniciar" text="_Login" textFill="#002357">
                <tooltip>
                    <Tooltip fx:id="toolTipButtonLogin" text="Ir al login" />
                </tooltip>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets right="100.0" />
               </HBox.margin>
               <font>
                  <Font name="Comic Sans MS Bold" size="14.0" />
               </font></Button>
            <Button mnemonicParsing="true" onAction="#onClickMenuCitas" text="_Citas" textFill="#002357">
                <tooltip>
                    <Tooltip fx:id="toolTipButtonCitas" text="Ir a citas" />
                </tooltip>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin>
               <font>
                  <Font name="Comic Sans MS Bold" size="14.0" />
               </font></Button>
         </children></HBox>
   </children>
</VBox>
