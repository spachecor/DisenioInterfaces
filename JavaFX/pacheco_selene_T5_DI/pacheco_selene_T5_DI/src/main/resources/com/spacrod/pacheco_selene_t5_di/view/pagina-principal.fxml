<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spacrod.pacheco_selene_t5_di.controller.PaginaPrincipalController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1260.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="630.0">
               <children>
                  <MenuBar>
                    <menus>
                      <Menu mnemonicParsing="false" text="Opciones">
                        <items>
                          <MenuItem mnemonicParsing="false" onAction="#onClickMenuItemCocheElectrico" text="Coche eléctrico" />
                              <MenuItem mnemonicParsing="false" onAction="#onClickMenuItemBicicletaElectrica" text="Biclibleta eléctrica" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="630.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onClickButtonSalir" style="-fx-background-color: #900000;" text="Salir" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label text="Elija el vehículo que desee alquilar" />
         </children></HBox>
      <HBox prefHeight="480.0" prefWidth="200.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="620.0">
               <children>
                  <ImageView fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/coche-electrico.jpg" />
                     </image>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </ImageView>
                  <Button mnemonicParsing="false" onAction="#onClickMenuItemCocheElectrico" text="Coche eléctrico" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="620.0">
               <children>
                  <ImageView fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/bicicleta-electrica.jpg" />
                     </image>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </ImageView>
                  <Button mnemonicParsing="false" onAction="#onClickMenuItemBicicletaElectrica" text="Bicicleta eléctrica" />
               </children>
            </VBox>
         </children></HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="labelError" />
         </children></HBox>
   </children>
</VBox>
